<odoo>
    <data>
        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Session list</field>
            <field name="res_model">gym.session</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">No records yet!</p>
            </field>
        </record>

        <record model="ir.ui.view" id="session_form_view">
            <field name="name">session.form</field>
            <field name="model">gym.session</field>
            <field name="arch" type="xml">
                <form string="Session form">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <notebook>
                            <page string="Data">
                                <group col="2">
                                    <field name="class_id"/>
                                    <field name="room_id"/>
                                </group>
                                <separator string="Date and time"/>
                                <group col="4" colspan="4">
                                    <field name="start_date"/>
                                    <field name="duration"/>
                                    <field name="end_date"/>
                                </group>
                            </page>
                            <page string="Assistants">
                                <group>
                                    <field name="subscribers_ids" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="session_tree_view">
            <field name="name">session.tree</field>
            <field name="model">gym.session</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="class_id"/>
                    <field name="room_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="session_search_view">
            <field name="name">session.search</field>
            <field name="model">gym.session</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="class_id"/>
                    <field name="room_id"/>
                </search>
            </field>
        </record>

    </data>
</odoo>